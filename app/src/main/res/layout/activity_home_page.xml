<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity">

    <FrameLayout
        android:id="@+id/headerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#E4EFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/homeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:text="HelpingHands"
                android:letterSpacing="0.03"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="#71D0F8" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logo"/>
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/featuredOpportunitiesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featured Opportunities"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/headerFrameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <HorizontalScrollView
        android:id="@+id/featuredOpportunitiesHorizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/featuredOpportunitiesLabel">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="#0066FF">

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="170dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_rectangle">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_rectangle"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_image1" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image1"
                    android:layout_marginLeft="5dp"
                    android:text="Title"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginLeft="5dp"
                    android:text="Category"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/button1"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/category"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bg_radius_ten_lightblue"
                    android:text="View Details"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <ImageButton
                    android:id="@+id/bell"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/category"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/button1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bell" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="170dp"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_rectangle">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_rectangle"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_image1" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image2"
                    android:layout_marginLeft="5dp"
                    android:text="Title"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/category2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title2"
                    android:layout_marginLeft="5dp"
                    android:text="Category"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/category2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bg_radius_ten_lightblue"
                    android:text="View Details"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <ImageButton
                    android:id="@+id/bell2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/category2"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/button2"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bell" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="170dp"
                android:layout_marginLeft="400dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_rectangle">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_rectangle"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_image1" />

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image3"
                    android:layout_marginLeft="5dp"
                    android:text="Title"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/category3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title3"
                    android:layout_marginLeft="5dp"
                    android:text="Category"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/category3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bg_radius_ten_lightblue"
                    android:text="View Details"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <ImageButton
                    android:id="@+id/bell3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/category3"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/button3"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bell" />

            </RelativeLayout>
        </RelativeLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/categoriesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/featuredOpportunitiesHorizontalScrollView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:text="Categories"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />
    
    <RelativeLayout
        android:id="@+id/campaignButtons"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#E4EFFF"
        android:layout_below="@id/categoriesLabel">

        <Button
            android:id="@+id/createCampaignButton"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_radius_ten_lightblue"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="Create \nCampaign"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/joinCampaignButton"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_radius_ten_lightblue"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="Join \nCampaign"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/myProfileLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_below="@id/campaignButtons"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/myProfileLabel"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="#D9D9D8">

        <ImageView
            android:id="@+id/pfp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circular_background"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/person_placeholder" />


        <TextView
            android:id="@+id/volunteerTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp"
            android:text="Volunteer"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pfp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/volunteerTextview"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="Edit bio"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/skillsTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:text="Skills:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/skillsTextview"
            android:textSize="20sp" />

    </RelativeLayout>

    <!--    nav sa ubos-->
    <fragment
        android:id="@+id/navBarFragment"
        android:name="com.intprog.helpinghands.NavBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>